<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="savioNascimento" id="1">
        <createTable tableName="paciente">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="nome" type="VARCHAR(255)" />
            <column name="cpf" type="VARCHAR(255)" />
            <column name="idade" type="INT" />
            <column name="sexo" type="CHAR" />
        </createTable>
    </changeSet>

    <changeSet author="savioNascimento" id="2">
        <createTable tableName="procedimento">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="descricao" type="VARCHAR(255)" />
            <column name="nome" type="VARCHAR(255)" />
        </createTable>
    </changeSet>

    <changeSet author="savioNascimento" id="3">
        <createTable tableName="controle_autorizacao">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="idade" type="INT" />
            <column name="permitido" type="BOOLEAN" />
            <column name="sexo" type="CHAR" />
            <column name="procedimento_id" type="INT" />
        </createTable>
    </changeSet>

    <changeSet author="savioNascimento" id="3">
        <createTable tableName="autorizacao">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="autorizado" type="BOOLEAN" />
            <column name="data" type="TIMESTAMP" />
            <column name="paciente_id" type="INT" />
            <column name="procedimento_id" type="INT" />
        </createTable>
    </changeSet>


</databaseChangeLog>